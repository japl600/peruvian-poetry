<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/poetImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/poetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/poetImageView"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/poetCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/poetName"
            android:layout_toEndOf="@id/poetImageView"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/poetDateLife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/poetCity"
            android:layout_toEndOf="@id/poetImageView"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>